@model IdentityProject.Models.MovieType
@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@section AdminHead{
    <script src="/ckeditor/ckeditor.js"></script>
}

@{
    Layout = "/Pages/Shared/AdminLayout.cshtml";


    
    <form method="POST" asp-controller="Type" asp-action="Add">

        <div class="card-body">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label name="type_id">ID</label>
                        <input name ="type_id" type="text" placeholder="Nhập ID thể loại phim">

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label name="type_name">Tên Thể Loại</label>
                        <input name="type_name" type="text" placeholder="Nhập tên thể loại phim">
                    </div>
                </div>
            </div>
        </div>


        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Tạo Thể Loại</button>
        </div>

    </form>
    
}

